<div class="top-row ps-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Eagency.Web</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/properties" Match="NavLinkMatch.All">
                <i class="bi bi-house-fill"></i> &nbsp;&nbsp;Properties
            </NavLink>
        </li>
        <AuthorizeView Policy="AgentPolicy">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/manage-properties" Match="NavLinkMatch.All">
                        <i class="bi bi-clipboard"></i> &nbsp;&nbsp;Agent site
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
                
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/mycontracts" Match="NavLinkMatch.All">
                        <i class="bi bi-clipboard"></i> &nbsp;&nbsp;My contracts
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/profile" Match="NavLinkMatch.All">
                        <i class="bi bi-person-circle"></i> &nbsp;&nbsp;Profile settings
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/logout" Match="NavLinkMatch.All">
                        <i class="bi bi-person-circle"></i> &nbsp;&nbsp;Logout
                    </NavLink>
                </li>
            </Authorized>
            <NotAuthorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/login" Match="NavLinkMatch.All">
                        <i class="bi bi-person-circle"></i> &nbsp;&nbsp;Login
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
