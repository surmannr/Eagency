@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row p-5 mt-2" style="background-color: #00203FFF; color: #ADEFD1FF; border-radius: 16px 16px">
    <h1>@ViewData["Title"]</h1>
    <h4>Create a new account.</h4>
    <hr />
    <div class="row">
        <div class="col-md-12 mt-2 mb-2">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.UserName" class="mt-2 mb-2"></label>
                    <input asp-for="Input.UserName" class="form-control mt-2 mb-2" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="mt-2 mb-2"></label>
                    <input asp-for="Input.Email" class="form-control mt-2 mb-2" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.FirstName" class="mt-2 mb-2"></label>
                    <input asp-for="Input.FirstName" class="form-control mt-2 mb-2" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName" class="mt-2 mb-2"></label>
                    <input asp-for="Input.LastName" class="form-control mt-2 mb-2" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="mt-2 mb-2"></label>
                    <input asp-for="Input.Password" class="form-control mt-2 mb-2" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="mt-2 mb-2"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control mt-2 mb-2" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button style="background-color:#ADEFD1FF; color: #00203FFF;" type="submit" class="btn btn-primary w-100 mt-2 mb-2">Register</button>
                <a style="background-color:#ADEFD1FF; color: #00203FFF;" href="/" class="btn btn-primary w-100 mt-2 mb-2">Cancel</a>
            </form>
        </div>
        <hr style="background-color:#ADEFD1FF; color: #ADEFD1FF;" class="mt-2 mb-2" />
        <div class="col-md-12 mt-2 mb-2">
            <section>
                <h4 class="text-center mt-2 mb-2">Use another service to register.</h4>
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="d-flex justify-content-center">
                            <p>
                                The external logins are not available.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button style="background-color:#ADEFD1FF; color: #00203FFF;" type="submit" class="btn btn-primary w-100 mt-2 mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}