@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}
<div class="row p-5 mt-2" style="background-color: #00203FFF; color: #ADEFD1FF; border-radius: 16px 16px">
    <section>
        <h1>@ViewData["Title"]</h1>
        <h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>
        <hr />

        <p id="external-login-description" class="text-info">
            You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
            Please enter an email address for this site below and click the Register button to finish
            logging in.
        </p>
    </section>
    <div class="col-md-12">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="mt-2 mb-2"></label>
                <input asp-for="Input.Email" class="form-control mt-2 mb-2" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Username" class="mt-2 mb-2"></label>
                <input asp-for="Input.Username" class="form-control mt-2 mb-2" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Firstname" class="mt-2 mb-2"></label>
                <input asp-for="Input.Firstname" class="form-control mt-2 mb-2" />
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Lastname" class="mt-2 mb-2"></label>
                <input asp-for="Input.Lastname" class="form-control mt-2 mb-2" />
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
